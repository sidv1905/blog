---
import BaseLayout from '../layouts/BaseLayout.astro';
const title = "Siddharth's blog";
const description = 'I write about tech, chess and more.';
const permalink = Astro.site.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="home-container">
    <div class="home-container">
      <div class="home-copy">
        <h1>Hey I'm Siddharth</h1>
        <p>You are looking for something which does not exist</p>
        <p style="font-size: 10pt;">
          404 - Page not found, Please visit <a href="/blog">Here</a> to read more
          about me and my blogs
        </p>
      </div>
      <div class="hero-image-container">
        <picture>
          <source
            srcset="/blog/assets/Working.webp"
            media="(min-width: 600px)"
          />
          <img
            class="hero-image"
            alt="Illustration of person reading a book"
            src="/blog/assets/Working.webp"
            width="550"
            height="466"
          />
        </picture>
      </div>
    </div>
  </div>

  <style>
    .home-container {
      align-items: center;
      display: flex;
      flex: 1;
      width: 100%;
      justify-content: center;
      margin: 2em 0;
      min-height: 400px;
    }

    .home-copy {
      flex: 1;
      padding: 0 1em;
    }

    .home-copy h1 {
      font-weight: 700;
      margin-bottom: 0.5em;
      line-height: 1.3;
    }

    .home-copy p {
      font-size: 1.4em;
    }

    .hero-image-container {
      margin: 0 1em;
      text-align: center;
      width: 350px;
      height: 350px;
      border-radius: 40%;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
      border: 5px solid #3498db; /* Border color and size */
    }

    .hero-image-container picture {
      display: block;
      min-height: 250px;
    }

    .caption {
      font-size: 0.8em;
      font-style: italic;
      text-align: left;
    }

    .hero-image {
      width: 100%;
      height: 100%;
    }

    @media (max-width: 1200px) {
      p {
        font-size: 1.2em;
      }

      .hero-image {
        max-width: 400px;
      }
    }

    @media (max-width: 800px) {
      .home-container {
        flex-direction: column;
      }

      .home-copy {
        flex: 0;
        padding-bottom: 2em;
        text-align: center;
      }
    }
  </style></BaseLayout
>
